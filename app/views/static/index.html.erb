
<div class="content-row">
		<h1 class="header">Welcome to Gender Overflow!</h1>
		<h3 class="tagline">
			<p>The premier site for sharing questions and answers about everything trans.</p>
			<p>Log in to help spread the love.</p>
		</h3>
</div>
<div class="content-row">
	<div class="col2">
		&nbsp;
	</div>
	<div class="col8 div.flex-video">
		<iframe src="//www.youtube.com/embed/dO8rUiqiW-Q" frameborder="0" allowfullscreen class="youtube-media" style="height:400px"></iframe>
	</div>
	<div class="col2">
	  &nbsp;
	</div>
</div>
<div class ="activity-block content-row">
	<h3>Latest Activity</h3>
	<ul class = "latest-activities">
		<% @activities.each do |activity| %>
			<li>
				<b><%= activity.user.login if activity.user %></b>
				<% if activity.is_a?(Question) %>
					asked <%= activity.question %>
				<% else %>
					answered <%= activity.question.question %>
				<% end %>
			</li>
		<% end %>
	</ul>
</div>